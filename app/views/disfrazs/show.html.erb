<p id="notice"><%= notice %></p>


<div class="container">
  
  <div class="col s12 m8">

    <div class="card-panel">
      <div class="row">
        <div class="container">
        <h5>Disfraz: <b><%= @disfraz.NOMBRE_DISFRAZ %></b></h5>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m4">
          <!--código #<%= @disfraz.id %>-->
          <%= image_tag @disfraz.imagen.url(:medium), class: 'materialboxed z-depth-1'%>
        </div>
        <div class="col s12 m8">
          <p><b>Nombre: </b> <%= @disfraz.NOMBRE_DISFRAZ %></p>
        
        <p><b>Descripcion:</b> <%= @disfraz.descripcion %></p>

        <p><b>Stock de la Tienda: </b><%= @disfraz.STOCK_DISFRAZ %></p>
        <p><b>Stock actual: </b><%= @disfraz.STOCK_DISPONIBLE %></p>
        <p><h5>Precio: $ <%= @disfraz.precio %></h5></p>
        </div>

      </div>


      
      <br>


        <% if current_cliente and @disfraz.STOCK_DISPONIBLE > 0%>
          <a href="/carrito/<%= @disfraz.ID_DISFRAZ %>" class="waves-effect waves-light btn white-text blue">Añadir <i class="material-icons">shopping_cart</i></a>
          <%else%>
          <blockquote>
              Disfraz fuera de stock.
            </blockquote>
        <% end %>
        <% if current_vendedor%>
          <%if current_vendedor.ES_ADMIN == true%>
                  <%= link_to 'Editar', edit_disfraz_path(@disfraz),class: 'waves-effect waves-light btn white-text ' %>
                  
                  <%= link_to 'Eliminar', disfraz_path, method: :delete, data: { confirm: 'Estas seguro?' },class: 'waves-effect waves-light btn white-text red' %>
          <%end%>
        <%end%>
    </div>
    <a href="/disfrazs" class="waves-effect waves-light btn white-text ">Regresar</a>
  </div>

</div>