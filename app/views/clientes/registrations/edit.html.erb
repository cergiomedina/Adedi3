


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 <div class="container">
  <div class="row red-text">
    <%= devise_error_messages! %>
  </div>
</div>

<div class="row">
    <div class="col s12"><p></p></div>
    <div class="col s12 m4 l2"><p></p></div>
    <div class="col s12 m4 l8"><p> </p>
      <div class="card-panel" >
  <h2><i class="fa fa-user"></i> Edita tu Perfil</h2>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :NOMBRE_CLIENTE , autocomplete: "off"%>
  </div>
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :APELLIDO_CLIENTE , autocomplete: "off"%>
  </div>
  <div class="field">
    <%= f.label :direccion %><br />
    <%= f.text_field :DIRECCION_CLIENTE , autocomplete: "off"%>
  </div>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :TELEFONO_CLIENTE , autocomplete: "off", :maxlength=>"8"%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmacion para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :nueva_contrasena %> <i>(Dejala en blanco si no la quieres cambiar)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contrasena %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :contrasena_actual %> <i>(Necesitamos tu contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

    <div class="actions">
      <a class="waves-effect waves-light btn"><%= f.submit "Actualizar" %></a>
      <%= link_to "Cancelar", "/clientes/#{current_cliente.id}",class: 'waves-effect waves-light btn white-text orange' %>
    </div>
  <% end %>
  </div>

    </div>
    <div class="col s12 m4 l2"><p></p></div>
  </div>

<div class="container">
  <div class="row">
     <ul class="collapsible popout" data-collapsible="accordion">
        <li>
          <div class="collapsible-header"><i class="fa fa-user"></i> No estás contento con nuestra Tienda?</div>
            <div class="collapsible-body">
              <div class="container" align="center">
                <h5><i class="fa fa-user"></i> Eliminar Cuenta</h5>

<p>No estas contento con nuestra tienda de Disfraces? o simplemente quieres dejar de pertenecer a nosotros? <%= button_to "Cancela tu cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?" }, method: :delete ,class: 'waves-effect waves-light btn white-text red'%></p>

              </div>  
            </div>
        </li>
      </ul>
  </div>
</div>

