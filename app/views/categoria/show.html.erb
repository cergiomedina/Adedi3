<p id="notice"><%= notice %></p>
<div class="container">


    <div class="col s12 m4 l7"><p> </p>
      <div class="card-panel" >
          <h2><i class="fa fa-user"></i> Categoría: <%= @categorium.NOMBRE_CATEGORIA %> </h2>
          <table>

<p>
  <b>Nombre categoria</b>: <%= @categorium.NOMBRE_CATEGORIA %>
</p>

<p>
  <b>Id categoria:</b>
  <%= @categorium.ID_CATEGORIA %>
</p>

<div class="row" align="center"><h4>Disfraces de esta Categoría</h4></div>
<div class="divider"></div>
<div class="row">

  <% @disfrazs.each do |disfraz| %>
          <div class="col s12 m4">
          <div class="card-panel" >
            <div class="row" align="center">
              <h5><%= disfraz.CATEGORIA_DISFRAZ%></h5>
              <div class="divider"></div>
              <%= image_tag disfraz.imagen.url(:thumb) %>
            </div>
            <div class="container" align="center">
            <p><%= link_to 'Ver', disfraz ,class: 'waves-effect waves-light btn white-text '%></p>
            </div>
            <% if current_vendedor%>
              <% if current_vendedor.ES_ADMIN == true %>



              <ul class="collapsible" data-collapsible="accordion">
                <li>
                  <div class="collapsible-header"><i class="material-icons">filter_drama</i>ADMIN</div>
                  <div class="collapsible-body" align="center">


                  <p><%= link_to 'Editar', edit_disfraz_path(disfraz),class: 'waves-effect waves-light btn white-text ' %>
                  <br></br>
                  <%= link_to 'Eliminar', disfraz, method: :delete, data: { confirm: 'Estas seguro?' },class: 'waves-effect waves-light btn white-text red' %></p>

                  </div>
                </li>
              </ul>
                    
              <% end %>
            <% end %>

          </div>

          </div>

        <% end %>
          
   <div class="col s12 m12" align="center"><%= will_paginate @disfrazs  %></div>


</div>

          </table>

          <br>
          <%= link_to 'Editar', edit_categorium_path(@categorium), class: 'waves-effect waves-light btn white-text' %>

          <!--FALTA BOTON ELIMINAR-->
          <%= link_to 'volver', categoria_path, class: 'waves-effect waves-light btn white-text' %>

  </div>

    </div>
</div>


